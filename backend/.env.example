# Variables de entorno para la aplicación de florería

# Puerto del servidor
PORT=5000

# Configuración de la base de datos
DB_PATH=./database.db

# Configuración JWT
JWT_SECRET=secreto_super_seguro_para_flores
JWT_EXPIRES_IN=24h

# Configuración de correo (para formularios de contacto)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=tu_usuario@example.com
SMTP_PASS=tu_contraseña
EMAIL_FROM=contacto@arreglosvictoria.com

# Configuración de Google OAuth (opcional)
GOOGLE_CLIENT_ID=tu_google_client_id
GOOGLE_CLIENT_SECRET=tu_google_client_secret

# Configuración de entorno
NODE_ENV=development

# Configuración de CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:5500,https://tu-dominio.com

# Configuración de logs
LOG_LEVEL=info